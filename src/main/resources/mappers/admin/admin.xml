<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.kmarket2.dao.AdminDAO">

	<select id="selectListQna" resultType="kr.co.kmarket2.vo.CsQnaVO">
        SELECT *
        FROM 
        	km_cs_qna AS a 
        JOIN 
        	km_cs_cate1 AS b 
        ON 
        	a.cate1 = b.cate1 
        JOIN 
        	km_cs_cate2 AS c 
        ON 
        	a.cate2 = c.cate2 
        AND 
        	b.cate1 = c.cate1
        	 
       	<where>
       		<if test="cate1 != 0">
       			a.cate1 = #{cate1}
       		</if>
       		<if test="cate2 != 0">
       			AND a.cate2 = #{cate2}
       		</if>
       	</where>
        	
        	
        ORDER BY 
        	(rdate) DESC
        LIMIT #{offset}, #{pageSize}
	</select>
	
    <select id="countTotalQna" resultType="int">
        SELECT COUNT(*)
        FROM km_cs_qna
        <where>
			<if test="cate1 != 0">
	   			cate1 = #{cate1}
	   		</if>
	   		<if test="cate2 != 0">
	   			AND cate2 = #{cate2}
	   		</if>        
        </where>
    </select>
    
</mapper>
